{
   "max_word_id": 4000,
   "bidirectional": true,
   "cell_type": "lstm",
   "decoder": "attention",
   "embedding_size": 100,
   "keep_prob": 0.5,
   "memory_size": 25,
   "num_layers": 1,
   "num_units": 100,
   "use_embedding": true,
   "epoches": 50,
   "batch_size": 32,
   "init": {
      "name": "random_uniform_initializer",
      "scale": 0.1
   },
   "lr_scheduler": {
      "decay_steps": 5000,
      "init_lr": 0.005,
      "decay_rate": 0.8,
      "staircase": true
   },
   "max_grad_norm": 5,
   "optimizer": "AdamOptimizer"
}

